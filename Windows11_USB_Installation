                <button class="btn btn-success" onclick="submitQuiz()">Submit Quiz</button>
                <div id="quizResults" class="hidden"></div>
                
                <div class="interactive-element" style="margin-top: 30px;">
                    <h3>üéì Congratulations!</h3>
                    <p>You've completed the Windows 11 USB Installation course. Make sure to download and complete the printable handout for hands-on practice.</p>
                    <button class="btn btn-success" onclick="generateCertificate()">Generate Completion Certificate</button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        let troubleshootingStep = 1;
        
        function showTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Remove active class from all nav tabs
            const navTabs = document.querySelectorAll('.nav-tab');
            navTabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            
            // Add active class to clicked nav tab
            event.target.classList.add('active');
        }
        
        function startPreAssessment() {
            const preAssessmentDiv = document.getElementById('preAssessment');
            if (preAssessmentDiv) {
                preAssessmentDiv.classList.remove('hidden');
                preAssessmentDiv.classList.add('fade-in');
            }
        }
        
        function checkPreAssessment() {
            const ramAnswer = document.querySelector('input[name="preRam"]:checked');
            const tpmAnswer = document.querySelector('input[name="preTPM"]:checked');
            const resultsDiv = document.getElementById('preAssessmentResults');
            
            if (!ramAnswer || !tpmAnswer) {
                if (resultsDiv) {
                    resultsDiv.innerHTML = '<div class="alert alert-warning">Please answer all questions before submitting.</div>';
                    resultsDiv.classList.remove('hidden');
                }
                return;
            }
            
            let score = 0;
            let feedback = [];
            
            if (ramAnswer.value === '4gb') {
                score++;
                feedback.push('‚úÖ RAM requirement: Correct! Windows 11 requires 4GB minimum.');
            } else {
                feedback.push('‚ùå RAM requirement: Incorrect. Windows 11 requires 4GB RAM minimum.');
            }
            
            if (tpmAnswer.value === 'tpm2') {
                score++;
                feedback.push('‚úÖ Security requirement: Correct! TPM 2.0 is mandatory for Windows 11.');
            } else {
                feedback.push('‚ùå Security requirement: Incorrect. TPM 2.0 is required and "non-negotiable" according to Microsoft.');
            }
            
            const percentage = Math.round((score / 2) * 100);
            
            if (resultsDiv) {
                resultsDiv.innerHTML = `
                    <div class="alert alert-${score >= 2 ? 'success' : 'info'}">
                        <h4>Pre-Assessment Results</h4>
                        <p><strong>Score: ${score}/2 (${percentage}%)</strong></p>
                        ${feedback.map(f => `<p>${f}</p>`).join('')}
                        ${score >= 2 ? 
                            '<p><strong>Great start! You have a good foundation for this lesson.</strong></p>' : 
                            '<p><strong>No worries! This lesson will help you learn these important concepts.</strong></p>'
                        }
                    </div>
                `;
                resultsDiv.classList.remove('hidden');
                resultsDiv.classList.add('fade-in');
            }
        }
        
        function showCompatibilityTools() {
            const toolsDiv = document.getElementById('compatibilityTools');
            if (toolsDiv) {
                toolsDiv.classList.remove('hidden');
                toolsDiv.classList.add('fade-in');
            }
        }

        function showDriveOptions() {
            const optionsDiv = document.getElementById('driveOptions');
            if (optionsDiv) {
                optionsDiv.classList.remove('hidden');
                optionsDiv.classList.add('fade-in');
            }
        }
        
        function showDriveOptions() {
            document.getElementById('driveOptions').classList.remove('hidden');
        }
        
        function startTroubleshooting() {
            const flowDiv = document.getElementById('troubleshootingFlow');
            if (flowDiv) {
                flowDiv.classList.remove('hidden');
                flowDiv.classList.add('fade-in');
                
                // Reset to initial state
                const stepDiv = document.getElementById('troubleshootingStep');
                if (stepDiv) {
                    stepDiv.innerHTML = `
                        <p><strong>Step 1:</strong> Is your computer powering on and showing the Windows logo?</p>
                        <button class="btn" onclick="troubleshootingNext('yes', 'power')">Yes</button>
                        <button class="btn" onclick="troubleshootingNext('no', 'power')">No</button>
                    `;
                }
            }
        }
        
        function troubleshootingNext(answer, issue) {
            const stepDiv = document.getElementById('troubleshootingStep');
            if (!stepDiv) return;
            
            if (issue === 'power' && answer === 'no') {
                stepDiv.innerHTML = `
                    <p><strong>Solution:</strong> Check power connections, press power button firmly, and verify power supply. If still no response, hardware failure may be present.</p>
                    <div style="margin-top: 15px;">
                        <button class="btn btn-warning" onclick="startTroubleshooting()">Start Over</button>
                        <button class="btn btn-success" onclick="showTab('requirements')">Check Requirements</button>
                    </div>
                `;
            } else if (issue === 'power' && answer === 'yes') {
                stepDiv.innerHTML = `
                    <p><strong>Step 2:</strong> Does the system boot to the Windows installer, or do you see error messages?</p>
                    <div style="margin-top: 15px;">
                        <button class="btn" onclick="troubleshootingNext('installer', 'boot')">Boots to Installer</button>
                        <button class="btn" onclick="troubleshootingNext('error', 'boot')">Shows Errors</button>
                        <button class="btn btn-warning" onclick="startTroubleshooting()">Start Over</button>
                    </div>
                `;
            } else if (issue === 'boot' && answer === 'error') {
                stepDiv.innerHTML = `
                    <p><strong>Common Solutions:</strong></p>
                    <ul style="text-align: left; margin: 15px 0;">
                        <li>Check BIOS settings - ensure UEFI mode is enabled</li>
                        <li>Enable TPM 2.0 in BIOS/UEFI settings</li>
                        <li>Configure Secure Boot properly</li>
                        <li>Verify USB drive is bootable and not corrupted</li>
                        <li>Try different USB port (USB 2.0 instead of 3.0)</li>
                    </ul>
                    <div style="margin-top: 15px;">
                        <button class="btn btn-success" onclick="startTroubleshooting()">Start Over</button>
                        <button class="btn" onclick="showTab('requirements')">Review Requirements</button>
                    </div>
                `;
            } else if (issue === 'boot' && answer === 'installer') {
                stepDiv.innerHTML = `
                    <p><strong>Excellent!</strong> Your system is properly configured. Proceed with the installation following the steps in the Installation tab.</p>
                    <div style="margin-top: 15px;">
                        <button class="btn btn-success" onclick="showTab('installation')">Go to Installation Guide</button>
                        <button class="btn btn-warning" onclick="startTroubleshooting()">Start Over</button>
                    </div>
                `;
            }
        }
        
        function submitQuiz() {
            const answers = {
                q1: '8gb',
                q2: 'tpm2',
                q3: 'sata',
                q4: 'uefi',
                q5: '8gen'
            };
            
            let score = 0;
            let total = Object.keys(answers).length;
            
            for (let question in answers) {
                const selected = document.querySelector(`input[name="${question}"]:checked`);
                if (selected && selected.value === answers[question]) {
                    score++;
                }
            }
            
            const percentage = Math.round((score / total) * 100);
            const resultsDiv = document.getElementById('quizResults');
            
            resultsDiv.innerHTML = `
                <div class="alert alert-${percentage >= 80 ? 'success' : 'warning'}">
                    <h4>Quiz Results</h4>
                    <p>You scored ${score} out of ${total} (${percentage}%)</p>
                    ${percentage >= 80 ? 
                        '<p>Excellent! You have a strong understanding of Windows 11 installation.</p>' : 
                        '<p>Review the course materials and try again to improve your score.</p>'
                    }
                </div>
            `;
            resultsDiv.classList.remove('hidden');
            resultsDiv.classList.add('fade-in');
        }
        
        function generateCertificate() {
            alert('üéì Certificate of Completion\n\nThis certifies that you have successfully completed the Windows 11 USB Installation course.\n\nDate: ' + new Date().toLocaleDateString() + '\n\nCongratulations!');
        }
        
        // Add progress tracking for checklist items
        document.addEventListener('change', function(e) {
            if (e.target.type === 'checkbox') {
                const container = e.target.closest('.section') || document;
                const checkboxes = container.querySelectorAll('input[type="checkbox"]');
                const checked = container.querySelectorAll('input[type="checkbox"]:checked');
                const progressBars = container.querySelectorAll('.progress-fill');
                
                progressBars.forEach(bar => {
                    if (checkboxes.length > 0) {
                        const progress = (checked.length / checkboxes.length) * 100;
                        bar.style.width = progress + '%';
                    }
                });
            }
        });
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Windows 11 Installation Lesson loaded successfully');
        });
    </script>
</body>
</html>
